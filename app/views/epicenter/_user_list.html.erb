<p><%= @user.name %></p>
<p><%= @user.location %></p>
<p><%= @user.bio %></p>
<p><%= link_to "Following", following_path(id: @user.id) %> |
	<%= link_to "Followers", followers_path(id: @user.id) %></p>

<% if current_user.following.include?(@user.id) %>
	<%= link_to "Following", unfollow_path(id: @user.id),
		class: "btn btn-primary unfollow_btn" %>
<% elsif current_user.id != @user.id %>
	<%= link_to "Follow", now_following_path(id: @user.id),
		class: "btn btn-primary" %>
<% end %>

<% @user.tweets.each do |tweet| %>
	<div class="well">
		<p><%= tweet.user.username %></p>
		<p><%= tweet.message %></p>
	</div>
<% end %>